<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".front_end.PrescriptionWriting">

    <TextView
        android:id="@+id/create_pres"
        android:layout_width="188dp"
        android:layout_height="27dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="108dp"
        android:text="Create Prescription"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.4sp"
        android:gravity="center_horizontal|top"
        />
    <View
        android:id="@+id/rectangle_1"
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="182dp"
        android:background="@drawable/rectangle_3"
        />
    <TextView
        android:id="@+id/patient_nam"
        android:layout_width="190.56dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52.58dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="192dp"
        android:text="Patient Name :"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:lineSpacingExtra="4sp"
        android:translationY="-2.03sp"
        android:gravity="top"
        />
    <View
        android:id="@+id/rectangle_2"
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp"
        android:layout_alignParentTop="true"
