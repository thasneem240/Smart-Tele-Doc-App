        android:gravity="top"
        />
    <View
        android:id="@+id/rectangle_3"
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="310dp"
        android:background="@drawable/rectangle_3"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="190.56dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52.58dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="320dp"
        android:text="Date : "
        android:textColor="@color/black"
        android:textSize="15sp"
        android:lineSpacingExtra="4sp"
        android:translationY="-2.03sp"
        android:gravity="top"
        />
    <View
        android:id="@+id/rectangle_4"
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="374dp"
        android:background="@drawable/rectangle_3"
        />
    <TextView
        android:id="@+id/prescription"
        android:layout_width="213dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="53dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="384dp"
        android:text="Prescription Details : "
        android:textSize="15sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="4sp"
        android:translationY="-2.03sp"
        android:gravity="top"
        />
    <View
        android:id="@+id/rectangle_5"
        android:layout_width="310dp"
        android:layout_height="230dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="426dp"
        android:background="@drawable/rectangle_4"
        />
    <TextView
        android:id="@+id/prescriptionNotes"
        android:layout_width="172.44dp"
        android:layout_height="16.66dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="444.24dp"
        android:text="Prescription Notes : "
        android:textSize="15sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="4sp"
        android:translationY="-2.03sp"
        android:gravity="top"
        />

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="108dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/rectangle_1"
        android:text="Submit " />


</RelativeLayout>