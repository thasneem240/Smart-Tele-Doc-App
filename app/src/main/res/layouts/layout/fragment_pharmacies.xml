<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/pharmacy"
        android:layout_width="98dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="157dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="3sp"
        android:text="Pharmacy"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:translationY="-1.4sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/searchDrugs"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_rec"
        android:hint="Search Drugs"
        android:paddingStart="50sp"
        android:textColor="#A1A8B0"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pharmacy" />

    <View
        android:id="@+id/rectangle_8"
        android:layout_width="301dp"
        android:layout_height="101dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="25dp"
        android:background="#E6ECF7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchDrugs" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/rectangle_8"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:background="@drawable/rectangle_5"
        android:text="Upload Prescription"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_quick" />

    <TextView
        android:id="@+id/order_quick"
        android:layout_width="135dp"
        android:layout_height="63dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:gravity="top"
        android:lineSpacingExtra="8sp"
        android:text="Order Quick with Prescription"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:translationY="-4.03sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchDrugs" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rectangle_8"
        android:layout_alignParentEnd="true"
        android:src="@drawable/medicine"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/rectangle_8"
        app:layout_constraintVertical_bias="0.48" />

    <Button
        android:id="@+id/pharmsearchButton"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="138dp"
        android:background="@drawable/rectangle_6"
        android:text="Search"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchPharmLoc" />

    <EditText
        android:id="@+id/searchPharmName"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded_rec"
        android:hint="Search by Name"
        android:paddingStart="50sp"
        android:textColor="#A1A8B0"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_8" />


    <EditText
        android:id="@+id/searchPharmLoc"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded_rec"
        android:hint="Search by Location"
        android:paddingStart="50sp"
        android:textColor="#A1A8B0"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchPharmName" />

    <ImageView
        android:id="@+id/specIcon3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/search_icon"
        app:layout_constraintStart_toStartOf="@+id/searchDrugs"
        app:layout_constraintTop_toTopOf="@+id/searchDrugs" />

    <TextView
        android:id="@+id/popular_dru"
        android:layout_width="113.51dp"
        android:layout_height="16.2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:text="Popular Drugs"
        android:textColor="#101623"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pharmsearchButton" />

    <TextView
        android:id="@+id/see_all"
        android:layout_width="55dp"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="197dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:gravity="top"
        android:text="See all"
        android:textColor="#199A8E"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/popular_dru"
        app:layout_constraintTop_toBottomOf="@+id/pharmsearchButton" />


    <ImageView
        android:id="@+id/specIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/search_icon"
        app:layout_constraintStart_toStartOf="@+id/searchPharmName"
        app:layout_constraintTop_toTopOf="@+id/searchPharmName" />


    <ImageView
        android:id="@+id/specIcon2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/search_icon"
        app:layout_constraintStart_toStartOf="@+id/searchPharmLoc"
        app:layout_constraintTop_toTopOf="@+id/searchPharmLoc" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pharmrv"
        android:layout_width="377dp"
        android:layout_height="185dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="36dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>