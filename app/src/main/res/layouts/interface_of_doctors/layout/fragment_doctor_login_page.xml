<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interface_of_doctors.doctor_authentication.DoctorLoginPage">

    <ImageView
        android:id="@+id/ImageView_backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="353dp"
        android:layout_marginBottom="636dp"
        android:src="@drawable/baseline_keyboard_arrow_left_24" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="313dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:gravity="center_horizontal|top"
        android:text="Login As A Doctor"
        android:textColor="#407C87"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/EditText_RegNumber"
        android:layout_width="371dp"
        android:layout_height="52.57dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/rounded_rec"
        android:gravity="center"
        android:hint="Registration number/ User name"
        android:strokeWidth="2"
        android:strokeColor="#E5E7EB"
        android:textColorHint="#A1A8B0"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/EditText_EnterPassword"
        android:layout_width="371dp"
        android:layout_height="52.57dp"
        android:layout_below="@+id/EditText_RegNumber"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_rec"
        android:gravity="center"
        android:hint="Password"
        android:strokeWidth="2"
        android:strokeColor="#E5E7EB"
        android:textColorHint="#A1A8B0"
        android:textSize="16sp" />

    <Button
        android:id="@+id/Button_Login"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/rectangle_1" />

    <TextView
        android:id="@+id/dont_have_account_text"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="140dp"
        android:gravity="center_horizontal|top"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="2sp"
        android:text="Don't have an account?"
        android:textColor="#717784"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sign_up_link"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Button_Login"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="-24dp"
        android:gravity="center_horizontal|top"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="2sp"
        android:text="Sign Up"
        android:textColor="#013073"
        android:textSize="15sp" />

</RelativeLayout>
