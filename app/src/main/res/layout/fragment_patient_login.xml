<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".front_end.PatientLogin">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="313dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        android:text="Login As Patient"
        android:textSize="28sp"
        android:textColor="#407C87"
        android:gravity="center_horizontal|top" />

    <EditText
        android:id="@+id/loginenter_email"
        android:layout_width="371dp"
        android:layout_height="52.57dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/rounded_rec"
        android:strokeWidth="2"
        android:strokeColor="#E5E7EB"
        android:gravity="center"
        android:hint="Enter your email"
        android:textColorHint="#A1A8B0"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/login_email_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/loginenter_email"
        android:layout_alignTop="@+id/loginenter_email"
        android:layout_marginStart="27dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/message_icon" />

    <EditText
        android:id="@+id/enter_password"
        android:layout_width="371dp"
        android:layout_height="52.57dp"
        android:layout_below="@+id/loginenter_email"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_rec"
        android:gravity="center"
        android:hint="Enter your Password"
        android:strokeWidth="2"
        android:strokeColor="#E5E7EB"
        android:textColorHint="#A1A8B0"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/password_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/enter_password"
        android:layout_alignTop="@+id/enter_password"
        android:layout_marginStart="33dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/password_icon" />


    <ImageView
        android:id="@+id/login_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/enter_password"
        android:layout_alignTop="@+id/enter_password"
        android:layout_marginStart="325dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/eye_slash" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="128dp"
        android:layout_height="23dp"
        android:layout_below="@id/enter_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="251dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="4sp"
        android:text="Forgot Password?"
        android:textColor="#013073"
        android:textSize="15sp" />
    <Button
        android:id="@+id/login_button"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/rectangle_1" />

    <TextView
        android:id="@+id/dont_have_account_text"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="140dp"
        android:gravity="center_horizontal|top"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="2sp"
        android:text="Don't have an account?"
        android:textColor="#717784"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sign_up_link"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="-24dp"
        android:gravity="center_horizontal|top"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="2sp"
        android:text="Sign Up"
        android:textColor="#013073"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="353dp"
        android:layout_marginBottom="636dp"
        android:src="@drawable/baseline_keyboard_arrow_left_24" />

</RelativeLayout>
