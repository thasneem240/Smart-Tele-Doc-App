?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.AuthenticationHomeF">


    <Button
        android:id="@+id/patient_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text=" Sign Up as a patient"
        app:layout_constraintEnd_toEndOf="@+id/login_button"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="131dp"
        android:layout_marginBottom="132dp"
        android:text="Login as a patient"
        app:layout_constraintBottom_toBottomOf="@+id/signout_button"
        app:layout_constraintEnd_toEndOf="@+id/signout_button"
        app:layout_constraintStart_toStartOf="@+id/signout_button"
        app:layout_constraintTop_toTopOf="@+id/patient_button" />

    <Button
        android:id="@+id/signout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="263dp"
        android:layout_marginBottom="264dp"
        android:text="Check/Signout"
        app:layout_constraintBottom_toBottomOf="@+id/email_verification_button2"
        app:layout_constraintEnd_toEndOf="@+id/patient_profile_button"
        app:layout_constraintStart_toStartOf="@+id/patient_profile_button"
        app:layout_constraintTop_toTopOf="@+id/patient_button" />

    <Button
        android:id="@+id/patient_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="132dp"
        android:text="Patient profile"
        app:layout_constraintBottom_toBottomOf="@+id/email_verification_button2"
        app:layout_constraintEnd_toEndOf="@+id/email_verification_button2"
        app:layout_constraintStart_toStartOf="@+id/email_verification_button2"
        app:layout_constraintTop_toTopOf="@+id/signout_button" />

    <Button
        android:id="@+id/email_verification_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Email verification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>