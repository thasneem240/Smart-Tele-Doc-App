<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity_NoteTaking">

        <EditText
            android:id="@+id/noteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Take notes..."
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine"
            android:lines="5"
            android:gravity="start"
            android:padding="8dp" />

        <Button
            android:id="@+id/saveNoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_below="@id/noteEditText"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/clearNoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_below="@id/noteEditText"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:id="@+id/notesScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saveNoteButton"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/displayNotesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="16dp" />
        </ScrollView>

    </RelativeLayout>





