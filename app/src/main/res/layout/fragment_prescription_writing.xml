<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".writing_prescriptions.CreatePrescription">

    <ImageView
        android:id="@+id/ImageView_BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="11dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_keyboard_arrow_left_24" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="188dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="124dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="3sp"
        android:text="Create Prescription"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:translationY="-1.4sp" />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="360dp"
        android:layout_height="504dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="119dp"
        android:src="@drawable/rectangle_8" />

    <EditText
        android:id="@+id/EditText_PrescriptionNotes"
        android:layout_width="288dp"
        android:layout_height="113dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="413dp"
        android:layout_marginEnd="62dp"
        android:background="#F6F8E2"
        android:hint="Prescription Notes"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/EditText_patientName"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/rectangle_4"
        android:hint=" Patient Name"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/EditText_doctorName"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/rectangle_4"
        android:hint="Doctor's Name"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/EditText_dob"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/rectangle_4"
        android:hint="Date of birth"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/EditText_WrittenOn"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="301dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/rectangle_9"
        android:hint="Written on"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/EditText_ExpirationDate"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="358dp"
        android:layout_marginEnd="67dp"
        android:background="@drawable/rectangle_9"
        android:hint="Prescription expiration date"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TextView_DrugsCount"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditText_PrescriptionNotes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="229dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="98dp"
        android:background="@drawable/rectangle_9"
        android:text="Drugs count"
        android:textSize="14sp" />

    <Button
        android:id="@+id/Button_Submit"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="58dp"
        android:background="@drawable/rectangle_6"
        android:text="Submit " />

    <Button
        android:id="@+id/Button_SelectedDrugs"
        android:layout_width="133dp"
        android:layout_height="38dp"
        android:layout_below="@+id/EditText_PrescriptionNotes"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="219dp"
        android:background="@drawable/rectangle_6"
        android:text="Select drugs" />


</RelativeLayout>